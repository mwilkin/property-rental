{{#if updateAnnouncementForm}}
  <h4>Update this announcement:</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=announcement.title}}
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          {{input value=type id="type" placeholder=announcement.type}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=announcement.date}}
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          {{input value=message id="message" placeholder=announcement.message}}
        </div>

        <button {{action 'update' announcement}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateAnnouncementForm'}}>Update</button>
{{/if}}
