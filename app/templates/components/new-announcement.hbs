{{#if addNewAnnouncement}}
  <h1>New Announcement</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="date">Date</label>
          {{input type="date" value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          {{input value=type id="type"}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          {{input value=message id="message"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'announcementFormShow'}}>New Announcement</button>
{{/if}}
